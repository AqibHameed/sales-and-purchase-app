<div class="table">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Tender Name</th>
      <th>Bids</th>
      <th>Total Bid Amount</th>
      <th>Time Remaining</th>
      <th>Send Confirmation</th>
    </tr>
    <% @tenders.each do |tender| %>
    <tr>
      <td>Tender <%= tender.id %></td>
      <td><%= '-' %></td>
      <td><%= 'xxx' %></td>
      <td>1hr 20min</td>
      <td><%= tender.send_confirmation? %></td>
    </tr>
    <% end %>
  </table>
</div>

