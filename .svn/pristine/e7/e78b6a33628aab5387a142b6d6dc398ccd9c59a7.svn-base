<div class="table">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Parcel Deec No</th>
      <th>Lot No</th>
      <th>Description</th>
      <th>Carat</th>
      <th>Automated Winners</th>
      <th>Winning Bid</th>
    </tr>
    <%= form_tag('/winners/save', :method => :put) do %>
      <%= hidden_field_tag 'tender_id', @tender.id %>
      <% @tender.stones.each_with_index do |stone, i| %>
        <tr>
          <td><%= stone.deec_no %></td>
          <td><%= stone.lot_no %></td>
          <td><%= stone.description %></td>
          <td><%= stone.carat %></td>
          <% if stone.bids.blank? %>
            <td>-</td>
            <td>-</td>
          <% else %>
            <% unless stone.top_bid.blank? %>
              <td>
                <% stone.top_bid.each do |bid| %>
                  <%= hidden_field_tag "winner[#{i}][tender_id]", @tender.id %>
                  <%= hidden_field_tag "winner[#{i}][stone_id]", stone.id %>
                  <%= hidden_field_tag "winner[#{i}][customer_id]", bid.customer.id %>
                  <%= radio_button_tag "winner[#{i}][bid_id]", bid.id %> <%= bid.customer.name %>
                  <%= " (#{bid.customer.email}) " %>
                  <br>
                <% end %>
              </td>
              <td><%= stone.top_bid.first.total %></td>
            <% else %>
              <td>-</td>
              <td>-</td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
      <tr>
        <td colspan='6' style="text-align:center"> <%= submit_tag 'Save', :class => 'btn-01' %> </td>
      </tr>
    <% end %>
  </table>
</div>

