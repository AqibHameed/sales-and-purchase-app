<div class="header">
	<div class="c1">
		<nav class="nav">
			<ul>
				<li class="first" onClick=" window.location.href = '/' ">
					<%= link_to 'Home', root_path, :class => 'home' %>
					<!-- <a class="home" href="#">Home</a> -->
				</li>
				<li>
					<%= link_to 'Tenders', tenders_path %>
					<!-- <a href="tender-dashboard.html">Tenders</a> -->
				</li>
				<li>
					<%= link_to 'History', history_tenders_path %>
					<!-- <a href="tender-history.html">History</a> -->
				</li>
				<% if current_customer %>
				<li>
					<%= link_to 'Database', new_search_path %>
				</li>
				<li>
					<%= link_to 'Profile', profile_customers_path %>
				</li>
				<li>
					<%= link_to 'Calendar', calendar_tenders_path %>
				</li>
				<% end %>
				<!-- <li>
					<a href="#">Reports</a>
				</li> -->
				<% if current_admin %>
				<li>
					<%= link_to 'Winners List', list_winners_path %>
				</li>
				<li>
					<%= link_to 'Admin Panel', '/admins' %>
				</li>
				<% end %>

			</ul>

		</nav>
	</div>
	<% if current_user %>
	<div class="c2">
		Welcome <a href="#"><%= current_user.name %></a>
		| <%= link_to 'Logout', destroy_customer_session_path, :method => :delete %>
	</div>
	<% end %>
	<div class="clear"></div>
</div>
<script>
	$(document).ready(function() {
		$('nav.nav ul li a').each(function(){
			var href = $(this).attr('href');
			//alert(href)
			//alert(window.location.pathname)
			if(window.location.pathname == href){
				$(this).parent().addClass('active')
			}
		}) 

	});
</script>
