<div class="table">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Tender Name</th>
      <th>Bid Amount</th>
      <th>Closed On</th>
    </tr>
    <% @tenders.each do |tender| %>
    <tr>
      <td><%= link_to tender.name, tender %></td>
      <td><%= tender.customer_bid_amount(current_customer) %></td>
      <td><%= tender.close_date.try(:strftime, '%b %e, %l:%M %p') %></td>
    </tr>
    <% end %>
  </table>
</div>

