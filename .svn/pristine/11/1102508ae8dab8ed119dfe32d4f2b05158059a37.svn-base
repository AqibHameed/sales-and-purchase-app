<%= form_for @bid do |f| %>
<%= f.hidden_field :customer_id %>
<%= f.hidden_field :tender_id %>

<div class="form-row">
	<div class="label">
		Place Your Bid
	</div>
	<div class="field">
		<%= f.text_field :amount, :style => 'width:230px;', :placeholder => 'Amount', :class => "input-1" %>
	</div>
	<div class="clear"></div>
</div>
<div class="clear10"></div>
<div class="form-row">
	<div class="label">
		&nbsp;
	</div>
	<div class="field">
		<% name =  @bid.amount.nil? ? "Place" : "Update" %>
		<%= f.submit "#{name} Bid", :class => 'btn-01' %>
	</div>
	<div class="clear"></div>
</div>
<div class="clear10"></div>
<% end %>