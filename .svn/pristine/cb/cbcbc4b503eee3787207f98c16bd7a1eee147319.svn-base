<div class="table">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Tender Name</th>
      <% if current_customer %>
        <th>Bid Amount</th>
      <% elsif current_admin %>
        <th>Winning Bid/Highest Bid</th>
        <th>Winning Customer</th>
      <% end %>
      <th>Status</th>
    </tr>
    <% @tenders.each do |tender| %>
    <tr>
      <td><%= link_to_if current_customer, tender.name, tender %></td>
      <% if current_customer %>
        <td><%= tender.customer_bid_amount(current_customer) %></td>
      <% else %>
        <td><%= tender.winning_bid.total %></td>
        <td><%= tender.winning_customer %></td>
      <% end %>
      <td><%= tender.open? ? 'Open' : 'Closed' %></td>
    </tr>
    <% end %>
  </table>
</div>

