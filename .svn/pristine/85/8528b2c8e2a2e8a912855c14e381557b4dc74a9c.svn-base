<%= form_for @bid do |f| %>
<%= f.hidden_field :customer_id %>
<%= f.hidden_field :tender_id %>

<div class="form-row">
	<div class="label" style='width:33%!important'>
		Amount
	</div>
	<div class="field" style='width:60%!important'>
		<%= f.text_field :amount, :style => 'width:200px;', :placeholder => 'Amount', :class => "input-1" %>
	</div>
	<div class="clear"></div>
</div>

<div class="form-row">
	<div class="label" style='width:33%!important'>
		Number of parcels bid on:
	</div>
	<div class="field" style='width:60%!important'>
		<%= f.text_field :no_of_parcels, :style => 'width:200px;', :placeholder => 'Number of parcels bid on', :class => "input-1" %>
	</div>
	<div class="clear"></div>
</div>

<div class="clear10"></div>
<div class="form-row">
	<div class="label" style='width:33%!important'>
		&nbsp;
	</div>
	<div class="field" style='width:60%!important'>
		<%= f.submit "Save", :class => 'btn-01' %>
	</div>
	<div class="clear"></div>
</div>
<div class="clear10"></div>
<% end %>

