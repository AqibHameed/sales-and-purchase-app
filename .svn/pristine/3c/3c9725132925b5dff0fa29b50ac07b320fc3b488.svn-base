<div class="table">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Parcel Deec No</th>
      <th>Lot No</th>
      <th>Description</th>
      <th>Carat</th>
      <th>Potential Winners</th>
    </tr>
    <%= form_tag('/winners/save', :method => :put) do %>
      <%= hidden_field_tag 'tender_id', @tender.id %>
      <% @tender.stones.each_with_index do |stone, i| %>
        <tr>
          <td><%= stone.deec_no %></td>
          <td><%= stone.lot_no %></td>
          <td><%= stone.description %></td>
          <td><%= stone.carat %></td>
          <% if stone.bids.blank? %>
            <td>There are no bids for this stone</td>
          <% else %>
            <td>
              <% stone.top_five_bids.each do |bid| %>
                <%= hidden_field_tag "winner[#{i}][tender_id]", @tender.id %>
                <%= hidden_field_tag "winner[#{i}][stone_id]", stone.id %>
                <%= hidden_field_tag "winner[#{i}][customer_id]", bid.customer.id %>
                <%= radio_button_tag "winner[#{i}][bid_id]", bid.id %> <%= bid.customer.name %>
                <%= " (#{bid.total}) " %>
                <br>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
      <tr>
        <td colspan='5' style="text-align:center"> <%= submit_tag 'Save', :class => 'btn-01' %> </td>
      </tr>
    <% end %>
  </table>
</div>

