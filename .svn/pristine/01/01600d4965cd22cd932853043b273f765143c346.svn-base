<style>
.login-box .field textarea {
    border: 1px solid #BEBEBE;
    border-radius: 3px 3px 3px 3px;
    font-size: 14px;
    padding: 7px;
    width: 230px;
}
</style>

<h2>
  <%= @tender.name %>
</h2><br>
<div style='font-size:15px'>
  <%= label_tag :description %> &nbsp : &nbsp
  <%= @tender.description %>
</div><br>
<div style='font-size:15px'>
  <%= label_tag :open_date %> &nbsp : &nbsp
  <%= @tender.open_date.strftime('%b %e, %l:%M %p') %>
</div><br>
<div style='font-size:15px'>
  <%= label_tag :close_date %> &nbsp : &nbsp
  <%= @tender.close_date.strftime('%b %e, %l:%M %p') %>
</div><br>
<br><br><br>
<h2> Your Bid </h2>

<% if @tender.open? %>

  <%= render 'bids/form' %>

<% else %>

  <%= render 'bids/details' %>

<% end %>

