class News < ActiveRecord::Base

  attr_accessible :title, :url, :date, :category, :description, :status

  rails_admin do
    edit do
      field :title
      field :url
      field :date do
        default_value Date.today
      end
      field :category, :enum do
        default_value 'News'
        enum do
          ['News', 'Event']
        end
      end
      field :description do
        bootstrap_wysihtml5 true
      end
      field :status do
        default_value true
      end
    end
  end

end

