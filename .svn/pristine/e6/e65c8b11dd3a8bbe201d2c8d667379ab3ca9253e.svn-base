<% unless @winners.length == 0 %>
<div class="table">
	<table width="100%" border="0" cellspacing="0" cellpadding="0" id="myTable" class="table table-condensed table-striped">
		<thead>
			<tr>
				<th>Lot No</th>
				<th>Description</th>
				<th>Selling Price</th>
				<th>Avg. Selling Price</th>
			</tr>
		</thead>
		<tbody>
			<% @winners.each_with_index  do |w,i| %>
			<tr>
				<td><%= w.lot_no.to_i %></td>
				<td><%= w.description %></td>
				<td><%= w.selling_price.nil? ? '' : (w.selling_price rescue "") %></td>
				<td><%= w.avg_selling_price %></td>
			</tr>
			<% end %>
		</tbody>
		<tr>
			<td style="text-align:right" colspan="2"><strong>Total :</strong></td>
			<td><strong><%= get_winner_sum(@winners) %></strong></td>
			<td></td>
		</tr>
	</table>
</div>
<% else %>
<p> Winner list not uploaded</p>
<% end %>
