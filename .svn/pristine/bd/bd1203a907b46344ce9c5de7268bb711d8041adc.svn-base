<div class="table">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Tender Name</th>
      <th>Bids</th>
      <th>Total Bid Amount</th>
      <th>Time Remaining</th>
      <th>Send Confirmation</th>
    </tr>
    <% @tenders.each do |tender| %>
    <tr>
      <td><%= link_to_if current_customer, tender.name, tender %></td>
      <td><%= tender.bid_count %></td>
      <td><%= tender.total_bid_amount %></td>
      <td><%= time_remaining(tender.close_date) %></td>
      <td><%= tender.send_confirmation? %></td>
    </tr>
    <% end %>
  </table>
</div>

