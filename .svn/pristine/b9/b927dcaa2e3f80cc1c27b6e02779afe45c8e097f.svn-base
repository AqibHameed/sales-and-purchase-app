.validation-error{
    color: red;
}

tr.winner {
	background: #00D812;
}


/* tender filters */

a.add{background:url(../assets/add.png) no-repeat;padding:5px 12px 9px;text-indent:-9999px;margin-left:5px;}
a.remove{background:url(../assets/remove.png) no-repeat;padding:5px 12px 9px;text-indent:-9999px;margin-left:5px;}

.filter input,.filter select {
	width:110px;
	border: 1px solid #B8B8B8;
}

.input1.error {
	
	border: 1px solid #FF0000;
}


.btn-00 {
    background: none repeat scroll 0 0 #ED5A48;
    border: 0 none;
    border-radius: 3px 3px 3px 3px;
    color: #FFFFFF;
    font-size: 14px;
    margin-right: 4px;
    padding: 4px 7px;
    text-decoration: none;
    cursor:pointer;
}