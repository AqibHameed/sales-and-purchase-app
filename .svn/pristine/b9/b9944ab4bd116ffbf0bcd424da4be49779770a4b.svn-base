<table width="100%" border="0" cellspacing="0" cellpadding="0" id="myTable" class="tablesorter"  >
	<thead>
		<tr>
			<th>Deec No</th>
			<th>Lot No</th>
			<th>Description</th>
			<th>No of Stones</th>
			<th>Weight</th>
			<th>AVG Bid</th>
			<th>Total Bid</th>
		</tr>
	<thead>
		<%= hidden_field_tag 'tender_id', @tender.id %>
		<tbody>
			<% @tender.stones.each_with_index do |stone, i| %>
			<tr>
				<td><%= stone.deec_no %></td>
				<td><%= stone.lot_no %></td>
				<td><%= stone.description %></td>
				<td><%= stone.no_of_stones %></td>
				<td><%= stone.weight %></td>
				<% if stone.bids.blank? %>
				<td>-</td>
				<td>-</td>
				<% else %>
				<% unless stone.top_bid.blank? %>
				<td><%= stone.top_bid.first.price_per_carat.to_f %></td>
				<td><%= stone.top_bid.first.total.to_f %></td>
				<% else %>
				<td>-</td>
				<td>-</td>
				<% end %>
				<% end %>
			</tr>
			<% end %>
		</tbody>

</table>
