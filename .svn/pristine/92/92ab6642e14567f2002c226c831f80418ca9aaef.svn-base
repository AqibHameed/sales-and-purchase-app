<%= form_for @bid do |f| %>
  <%= f.hidden_field :customer_id %>
  <%= f.hidden_field :tender_id %>

  <div class='login-box' style="width:auto; border:none">
    <div class='field'>
      <%= f.text_field :amount, :style => 'width:230px;', :placeholder => 'Amount' %><br><br>
      <%= f.text_area :message, :style => 'width:230px;', :placeholder => 'Message...', :rows => '4' %><br><br>
      <%= f.submit :style => 'width:auto;' %>
    </div>
  <div>

  </div>
<% end %>

