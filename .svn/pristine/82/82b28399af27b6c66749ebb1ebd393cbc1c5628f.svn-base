<div class="table">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Parcel Deec No</th>
      <th>Lot No</th>
      <th>Description</th>
      <th>Carat</th>
      <th>Winning Bid</th>
      <th>Winner</th>
    </tr>
    <% @stones.each do |stone| %>
      <tr>
        <td><%= stone.deec_no %></td>
        <td><%= stone.lot_no %></td>
        <td><%= stone.description %></td>
        <td><%= stone.carat %></td>
        <% unless stone.winner.blank? %>
          <% winner = stone.winner %>
          <td><%= winner.bid.total %></td>
          <td><%= winner.customer.name %></td>
        <% else %>
          <td><%= '-' %></td>
          <td><%= '-' %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>

