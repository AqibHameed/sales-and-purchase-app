class Winner < ActiveRecord::Base
  attr_accessible :stone_id, :customer_id, :bid_id, :tender_id

  validates_uniqueness_of :bid_id, :scope => [:stone_id,:customer_id]

  belongs_to :stone
  belongs_to :bid
  belongs_to :customer
  belongs_to :tender
  #  after_create :send_winning_mail
  def send_winning_mail
    TenderMailer.winning_mail(self.customer, self.stone).deliver
  end

  rails_admin do
    
      label "System Winner"
      label_plural "System Winners"
    
  end

end

