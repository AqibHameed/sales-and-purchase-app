<div class="table">
	<table width="100%" border="0" cellspacing="0" cellpadding="0" id="myTable" class="table table-condensed table-striped">
		<thead>
			<tr>
				<th>Lot No</th>
				<th>DEEC No</th>
				<th>Description</th>
				<th>No of Stones</th>
				<th>Carat</th>
			</tr>
		</thead>
		<tbody>
			<% @stones.each_with_index  do |s,i| %>
			<tr>
				<td><%= s.lot_no.to_i %></td>
				<td><%= s.deec_no.to_i %></td>
				<td><%= s.description %></td>
				<td><%= s.no_of_stones.nil? ? '' : (s.no_of_stones.to_i rescue "") %></td>
				<td><%= s.weight.round(2) unless s.weight.nil? %></td>
			</tr>
			<% end %>
		</tbody>
		<tr>
			<td style="text-align:right" colspan="4"><strong>Total :</strong></td>
			<td><strong><%= get_sum(@stones) %></strong></td>
		</tr>
	</table>
</div>
