<div class="table">
	
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Tender Name</th>
      <th>Stone Description</th>
      <th>Stone Type</th>
      <th>Stone Weight</th>
      <% if current_customer %>
        <th>Bid Amount</th>
      <% elsif current_admin %>
        <th>Winning Bid/Highest Bid</th>
        <th>Winning Customer</th>
      <% end %>
      <th>Selling Price</th>
      <th>% Difference</th>
      <th>Status</th>
    </tr>
    <% @stones.each do |stone| %>
    <tr>
      <td><%= link_to_if current_customer, stone.tender.name, stone.tender %></td>
      <td><%= stone.description %></td>
      <td><%= stone.stone_type %></td>
      <td><%= stone.weight %></td>
      <% if current_customer %>
        <td><%= stone.customer_bid_amount(current_customer) %></td>
      <% else %>
        <td><%= stone.winning_bid.try(:total) %></td>
        <td><%#= stone.tender.winning_customer %></td>
      <% end %>
      <td><%=  @selling_price[stone.deec_no] || '-' %></td>
      <td><%= get_difference(stone.customer_bid_amount(current_customer), @selling_price[stone.deec_no]) unless @selling_price[stone.deec_no].nil? %></td>
      <td><%= stone.tender.open? ? 'Open' : 'Closed' %></td>
      
    </tr>
    <% end %>
  </table>
</div>

