<div class="table">
<table width="98%" border="0" cellspacing="0" cellpadding="0" id="myTable" class="tablesorter">
  <thead>
    <tr>
      <th>Lot No</th>     
      <th>Parcel DEEC No</th>
      <th>Description</th>
      <th>Carat</th>
      <th>Price per carat</th>
      <th>Total Bid</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @stones.each do |stone| %>
      <tr>
        <td><%= stone.lot_no %></td>
        <td><%= stone.deec_no %></td>
        <td><%= stone.description %></td>
        <td><%= stone.weight %></td>
        <td id="pcb_<%= stone.id %>" ><%= stone.per_carat_bid(current_customer) %></td>
        <td id="tb_<%= stone.id %>" ><%= stone.total_bid(current_customer) %></td>
        <td><%= link_to 'Bid', place_new_stone_bids_path(stone.id), :class => 'place_bid' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<script type="text/javascript">

  $(document).ready(function(){

   // $('#myTable1').dataTable({
//    	  
   // });

    $(document).on('click', '.place_bid', function(e){
      e.preventDefault()
      var _this = $(this);
      var top = $(this).position()['top'] - 300;
      var url = $(this).attr('href')
      $.ajax({
        url: url,
        type: 'GET',
        success: function(response){
          $('.bid_form').html(response).show()
          $('.bid_form').css('margin-top', top + 'px' )
          $('tr').removeClass('current_bid');
          $(_this).parents('tr').addClass('current_bid');
        }
      })
    })

  })

</script>

<style>

.current_bid{
  background-color: #E4E4E4!important;
}

</style>

