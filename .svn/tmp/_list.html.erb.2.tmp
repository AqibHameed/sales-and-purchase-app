<div class="table">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th>Tender Name</th>
      <th>Bids</th>
      <th>Total Bid Amount</th>
      <th>Time Remaining</th>
      <%  if current_customer %>
      <th>Send Confirmation</th>
      <% end %>
    </tr>
    <% @tenders.each do |tender| %>
    <tr>
      <td><%= link_to_if current_customer, tender.name, tender %></td>
      <td><%= tender.bid_count(current_customer) %></td>
      <td><%= tender.total_bid_amount(current_customer) %></td>
      <td><%= time_remaining(tender.close_date) %></td>
      <% if current_customer %>
      <td><%= bid_confirmation_link(tender, current_customer)  %></td>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>

