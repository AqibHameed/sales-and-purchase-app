<h3>Parcel Details </h3>
<div class="table">
  <%= render partial: 'trading_parcels/parcel_details' %>
</div><br>

<div class="proposal-form">
  <h3> Edit Proposal </h3>
  <div class="clear10"></div>
  <div class="form-wrapper">
    <%= form_for @proposal do |f| %>
      <%= render partial: 'proposals/form', locals: { f: f } %>
      <% if current_user.id == @proposal.buyer_id %>
        <% value = @proposal.seller_id %>
      <% elsif current_user.id == @proposal.seller_id %>
        <% value = @proposal.buyer_id %>
      <% end %>
      <%=f.hidden_field :action_for, value: value %>
    <% end %>
  </div>
</div>
<div class="clear"></div>