<table width="100%" border="0" cellspacing="0" cellpadding="0" id="tenderList" class="tablesorter">
  <tr>
    <th></th>
    <th>Description</th>
    <th>No of Stones</th>
    <th>Carats</th>
    <th>Cost</th>
    <th>Box Value</th>
    <th>Sight</th>
    <th>Price</th>
    <th>Credit</th>
    <th>Buyer</th>
    <th></th>
  </tr>
  <% @proposals.each_with_index do |proposal, i|%>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= get_description(proposal.trading_parcel) %></td>
      <td><%= proposal.trading_parcel.no_of_stones.nil? ? 'N/A' : proposal.trading_parcel.no_of_stones %></td>
      <td><%= proposal.trading_parcel.weight %></td>
      <td><%= proposal.trading_parcel.cost.nil? ? 'N/A' : proposal.trading_parcel.cost %></td>
      <td><%= proposal.trading_parcel.box_value.nil? ? 'N/A' : proposal.trading_parcel.box_value %></td>
      <td><%= proposal.trading_parcel.sight.nil? ? 'N/A' : proposal.trading_parcel.sight.to_date.strftime("%m/%y") %></td>
      <td><%= proposal.trading_parcel.price.nil? ? 'N/A' : number_to_percentage(proposal.trading_parcel.price*100, precision: 1) %></td>
      <td><%= proposal.trading_parcel.credit_period %></td>
      <% if current_customer.id == proposal.buyer_id%>
        <td><%= proposal.supplier.company %></td>
      <% else %>
        <td><%= proposal.buyer.company %></td>
      <% end %>
      <td><%= link_to 'View', proposal_path(proposal) %></td>
    </tr>
  <% end %>
</table>
