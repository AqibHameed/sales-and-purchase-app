<%#= render :partial => "layouts/unauthenticate_navigation" %>
<%= stylesheet_link_tag "application" %>
<%= javascript_include_tag 'application' %>
<div class="wrapper login-page">

  <title>Dialuck</title>

	 <h6>Welcome to Tender Program</h6>
     <div class="sub-heading">
     	<p>By</p>
     	<p>Dialuck Trading Pvt. Ltd.</p>
     </div>
     <div class="clear20"></div>
     <div class="clear20"></div>
     <div class="heading">Registration</div>
     <div class="clear20"></div>
     <div class="login-box">
        <p style="color:red; font-size:13px;" class='error_msg'>
        </p>
        <p class=clear10></p>
        <% @customer = Customer.new %>
      <%= form_for(@customer, :url => login_path(@customer), :html => {:class => 'signup_form'} ) do |f| %>
          <div class="label">Email</div>
          <div class="field">
            <%= f.text_field :email %>
          </div>
          <div class="clear10"></div>
          <div class="label">Password</div>
          <div class="field">
            <%= f.password_field :password, :autocomplete => :off %>
          </div>
          <div class="label">First_name</div>
          <div class="field">
            <%= f.text_field :first_name %>
          </div>
          <div class="label">Last_name</div>
          <div class="field">
            <%= f.text_field :last_name %>
          </div>
          <div class="label">City</div>
          <div class="field">
            <%= f.text_field :city %>
          </div>
          <div class="label">Address</div>
          <div class="field">
            <%= f.text_field :address %>
          </div>
          <div class="label">Postal_code</div>
          <div class="field">
            <%= f.text_field :postal_code %>
          </div>
          <div class="label">Phone</div>
          <div class="field">
            <%= f.text_field :phone %>
          </div>
          <div class="label">Status</div>
          <div class="field">
            <%= f.text_field :status %>
          </div>
          <div class="label">Company</div>
          <div class="field">
            <%= f.text_field :company %>
          </div>
          <div class="label">Company_address</div>
          <div class="field">
            <%= f.text_field :company_address %>
          </div>
          <div class="label">Phone_2</div>
          <div class="field">
            <%= f.text_field :phone_2 %>
          </div>
          <div class="label">Mobile_no</div>
          <div class="field">
            <%= f.text_field :mobile_no %>
          </div>
        <div class="clear20"></div>
        <div class="clear10"></div>
        <%= link_to('Register', signup_path, :class => 'btn-02 registration_submit')  %>
        </div>
    <% end %>

<script type='text/javascript'>


    
    $(document).on('click', '.registration_submit', function(e){
      e.preventDefault();
      $('.error_msg').html('')

      $('#admin_email').val($('#customer_email').val())
      $('#admin_password').val($('#customer_password').val())


      var valuesToSubmit = $('.signup_form').serialize();
      $.ajax({
        url: $('.signup_form').attr('action'), //sumbits it to the given url of the form
        data: valuesToSubmit,
        type: 'post',
        success: function(response){ window.location.href = response },
        error: function(response){
          $('.error_msg').html(response.responseText)
        }
      });


    })



</script>

