<%= stylesheet_link_tag "application" %>
<%= javascript_include_tag 'application' %>
<title>Dialuck</title>
<div class="wrapper">
	 <h6>Welcome to Tender Program</h6>
     <div class="sub-heading">
     	<p>By</p>
     	<p>Dialuck Trading Pvt. Ltd.</p>
     </div>
     <div class="clear20"></div>
     <div class="clear20"></div>
     <div class="heading">Login</div>
     <div class="clear20"></div>
     <div class="login-box">
        <p style="color:red; font-size:13px;" class='error_msg'>
        </p>
        <p class=clear10></p>
      <% customer = Customer.new %>
      <%= form_for(customer, :url => session_path(customer), :html => {:class => 'login_form'} ) do |f| %>
       <% if @c_user  %>
          <div class="c_user">
           <%= @c_user.try(:name) %><br/>
           <%= @c_user.try(:email) %>
           <%= hidden_field_tag 'customer[email]', @c_user.try(:email) %>
           <%= hidden_field_tag 'admin[email]', @c_user.try(:email) %>
          </div>
          <div class="clear10"></div>        
          <div class="field">
            <%= f.password_field :password, :autocomplete => :off, :placeholder => "Password" %>
            <%= hidden_field_tag 'admin[password]' %>
          </div>     	
        <% else %>
          <div class="label">Username</div>
          <div class="field">
            <%= f.text_field :email %>
             <%= hidden_field_tag 'admin[email]' %>         
          </div>
          <div class="clear10"></div>
          <div class="label">Password</div>
          <div class="field">
            <%= f.password_field :password, :autocomplete => :off %>
            <%= hidden_field_tag 'admin[password]' %>
          </div>
        <% end %>        
        <div class="clear20"></div>
        <div>
          <%= link_to "Forgot Password ?", "customers/password/new", :class=> "forgot_password" %>
          <%= link_to "Login With different User", login_path(:key => "d_user"), :class=> "diff_user" if cookies[:c_user] %> 
          <!-- <a href="tender-dashboard.html" class="btn-02">Login</a> -->
        </div>
        <div class="clear10"></div>
        <div>
          <%= f.submit 'Login', :class => 'btn-02 login_submit' %>
        </div>
        <% end %>
     </div>
</div>


<script type='text/javascript'>

  $(document).ready(function(){

    $(document).on('click', '.login_submit', function(e){
      e.preventDefault();
      $('.error_msg').html('')

      $('#admin_email').val($('#customer_email').val())
      $('#admin_password').val($('#customer_password').val())


      var valuesToSubmit = $('.login_form').serialize();
      $.ajax({
        url: $('.login_form').attr('action'), //sumbits it to the given url of the form
        data: valuesToSubmit,
        type: 'post',
        success: function(response){ window.location.href = response },
        error: function(response){
          $('.error_msg').html(response.responseText)
        }
      });


    })

  })

</script>

