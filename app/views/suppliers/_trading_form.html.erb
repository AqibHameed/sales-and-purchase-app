<script>
  // $(document).on('change', '#trading_parcel_source', function(){
  //   id = $('#trading_parcel_source').val()
  //   $.ajax({
  //     url: '/supplier_demand_list',
  //     method: 'get',
  //     data: {id: id}
  //   })
  // })

  $(document).on('keyup focusout','#trading_parcel_percent', function(){
    var carat = parseFloat($('#carat').val());
    var cost = parseFloat($('#trading_parcel_cost').val());
    var percent = parseFloat($('#trading_parcel_percent').val());
    var price = parseFloat($('#price').val());
    calculate_price(carat, cost, percent, price)
  });

  $(document).on('keyup focusout','#price', function(){
    var carat = parseFloat($('#carat').val());
    var cost = parseFloat($('#trading_parcel_cost').val());
    var price = parseFloat($('#price').val());
    calculate_percent(carat, cost, price)
  });
  
  function calculate_price(carat, cost, percent, price){
    var avg_price = (percent/100)*cost + cost;
    var amount = carat*avg_price;
    if (isNaN(avg_price)){
      $('#price').val('')
      $('#amount').val('');
    }else{
      $('#price').val(avg_price)
      $('#amount').val(amount);
    }
  }

  function calculate_percent(carat, cost, price){
    var percent = ((price - cost) * 100)/cost;
    var amount = carat*price;
    if (isNaN(percent)){
      $('#trading_parcel_percent').val('')
      $('#amount').val(amount);
    }else{
      $('#trading_parcel_percent').val(percent)
      $('#amount').val(amount);
    }
  }

  $(document).on('focusout','#price', function(){
    var carat = $('#carat').val();
    var price = $('#price').val();
    var amount = carat*price;
    $('#amount').val(amount);
  });
  $(document).on('focusout','#carat', function(){
    var carat = $('#carat').val();
    var price = $('#price').val();
    var amount = carat*price;
    $('#amount').val(amount);
  });
</script>