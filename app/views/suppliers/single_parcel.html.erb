<h3>Parcel Details</h3>
<div class="table">
  <table width="100%" border="0" cellspacing="0" cellpadding="0" id="myTable" class="tablesorter">
  <tr>
    <td> Supplier</td>
    <td><%= @parcel.try(:customer).try(:company) %></td>
  </tr>
  <tr>
    <td> Source </td>
    <td><%= (@parcel.source.nil? || @parcel.source.blank?) ? 'N/A' : @parcel.source %></td>
  </tr>
  <tr>
    <td> Description</td>
    <td><%= get_description(@parcel) %></td>
  </tr>
  <tr>
    <td> No. of stones</td>
    <td><%= @parcel.no_of_stones.nil? ? 'N/A' : @parcel.no_of_stones %></td>
  </tr>
  <tr>
    <td> Box </td>
    <td><%= (@parcel.box.nil? || @parcel.box.blank?) ? 'N/A' : @parcel.box %></td>
  </tr>
  <tr>
    <td> Carats</td>
    <td><%= @parcel.weight %></td>
  </tr>
  <tr>
    <td> Cost</td>
    <td><%= @parcel.cost.nil? ? 'N/A' : @parcel.cost %></td>
  </tr>
  <tr>
    <td> Box Value</td>
    <td><%= (@parcel.box_value.nil? || @parcel.box_value.blank?) ? 'N/A' : @parcel.box_value %></td>
  </tr>
  <tr>
    <td> Sight</td>
    <td><%= (@parcel.sight.nil? || @parcel.sight.blank?) ? 'N/A' : @parcel.sight.to_date.strftime("%m/%y") %></td>
  </tr>
  <tr class="parcel-details">
    <td> Price</td>
    <td><%= @parcel.price.nil? ? 'N/A' : number_with_precision(@parcel.price, precision: 2) %></td>
  </tr>
  <tr class="parcel-details">
    <td> Credit</td>
    <td><%= @parcel.credit_period %> days </td>
  </tr>
  <tr>
    <td> Available Credit Buyers</td>
    <td>
      <%amount = 0 %>
      <% if @parcel.diamond_type == "Rough" %>
        <% amount = @parcel.price.to_f %>
      <% else %>
        <% amount = @parcel.weight.to_f * @parcel.price.to_f%>
      <% end %>
	   	<%= get_number_of_customers(current_customer, amount, 'available')%>
    </td>
  </tr>
  <tr>
    <td> Unavailable Credit Buyers</td>
    <td>
      <%amount = 0 %>
      <% if @parcel.diamond_type == "Rough" %>
        <% amount = @parcel.price.to_f %>
      <% else %>
        <% amount = @parcel.weight.to_f * @parcel.price.to_f%>
      <% end %>
	   	<%= get_number_of_customers(current_customer, amount, 'unavailable')%>
    </td>
  </tr>
   <tr>
    <td> Given No Credits</td>
    <td>
	   	<%= get_count_no_credit(current_customer)%>
    </td>
  </tr>
</table>
<div class="clear10"></div>
<%=link_to 'Add Another', single_parcel_form_suppliers_path, class: 'login-btn btn-02', data: {turbolinks: false} %>
<%=link_to 'Done', suppliers_path, class: 'login-btn btn-02', data: {turbolinks: false} %>
</div><br>