<div class="form-group">
	<label class="col-sm-2 control-label">Carats:</label>
	<div class="col-sm-10">
	<% if @trading_parcel.present? && @trading_parcel.weight.present? %>
	  <%= number_field_tag :weight, @trading_parcel.weight , class: 'form-control', id: 'trading_parcel_weight', name: 'trading_parcel[weight]', step: 0.01 %>
	<% else %>
	  <%= number_field_tag :weight, '', class: 'form-control', id: 'trading_parcel_weight', name: 'trading_parcel[weight]', step: 0.01 %>
	<% end %>
	</div>
</div>
