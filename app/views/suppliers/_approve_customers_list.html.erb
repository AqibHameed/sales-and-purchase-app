 // });

 $(document).on('click', '#star', function(e) {
  var url = $(this).attr('src');
  if (url == "/assets/star-off.png")
  {
   $(this).attr("src","/assets/star-on.png");
  }
  else
  {
   $(this).attr("src","/assets/star-off.png");
  }

 });

</script>
<style>
  .current_bid {
    background-color: #E4E4E4 !important;
  }
</style>