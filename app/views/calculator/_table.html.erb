<div id="example_wrapper" class="dataTables_wrapper no-footer">
	<div id="example_filter" class="dataTables_filter">
		<label>Search:
			<input type="search" class="" placeholder="" aria-controls="example">
		</label>
	</div>
	<div style="position: relative; clear: both; height: 331px;" class="DTFC_ScrollWrapper">
		<div style="position:absolute; top:0; left:0;" class="DTFC_RightWrapper">
			<div style="position:relative; top:0; left:0;" class="DTFC_RightHeadWrapper">
				<div style="position:absolute; top:0; bottom:0;" class="DTFC_RightHeadBlocker DTFC_Blocker"></div>
			</div>
			<div style="position:relative; top:0; left:0; overflow:hidden;" class="DTFC_RightBodyWrapper">
				<div style="position:relative; top:0; left:0; overflow-y:scroll;" class="DTFC_RightBodyLiner"></div>
			</div>
			<div style="position:relative; top:0; left:0;" class="DTFC_RightFootWrapper">
				<div style="position:absolute; top:0; bottom:0;" class="DTFC_RightFootBlocker DTFC_Blocker"></div>
			</div>
		</div>
		<div class="dataTables_scroll">
			<div class="dataTables_scrollHead" style="overflow: hidden; position: relative; border: 0px none; width: 100%;">
				<div class="dataTables_scrollHeadInner" style="-moz-box-sizing: content-box; width: 878px; padding-right: 0px;">
					<table cellspacing="0" width="100%" class="stripe row-border order-column dataTable no-footer" role="grid" style="margin-left: 0px; width: 878px;">
						<thead>
							<tr role="row" style="height: 19px;">
								<th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 21px;" aria-label=": activate to sort column ascending" aria-sort="ascending"></th><th class="if sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="if: activate to sort column ascending">if</th><th class="vvs1 sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="vvs1: activate to sort column ascending">vvs1</th><th class="vvs2 sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="vvs2: activate to sort column ascending">vvs2</th><th class="vs1 sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="vs1: activate to sort column ascending">vs1</th><th class="vs2 sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="vs2: activate to sort column ascending">vs2</th><th class="si1 sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="si1: activate to sort column ascending">si1</th><th class="si2 sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="si2: activate to sort column ascending">si2</th><th class="si3 sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="si3: activate to sort column ascending">si3</th><th class="i1 sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="i1: activate to sort column ascending">i1</th><th class="i2 sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="i2: activate to sort column ascending">i2</th><th class="i3 sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 77px;" aria-label="i3: activate to sort column ascending">i3</th>
							</tr>
						</thead>
					</table>
				</div>
			</div>	
			 <div class="dataTables_scrollBody" style="overflow: auto; height: 312px; width: 100%;">
	
				<table cellspacing="0" class="stripe row-border order-column dataTable no-footer" id="example" role="grid" aria-describedby="example_info" style="width: 863px;">
					<thead>
						<tr role="row" style="height: 0px;">
							<th class="sorting_asc" aria-controls="example" rowspan="1" colspan="1" style="width: 21px; padding-top: 0px; padding-bottom: 0px; border-top-width: 0px; border-bottom-width: 0px; height: 0px;" aria-sort="ascending" aria-label=": activate to sort column ascending"><div style="height:0;overflow:hidden;" class="dataTables_sizing"></div>
								
							</th>
							<% PURITY.each do |p| %>
							<th class="if sorting" aria-controls="example" rowspan="1" colspan="1" style="width: 77px; padding-top: 0px; padding-bottom: 0px; border-top-width: 0px; border-bottom-width: 0px; height: 0px;" aria-label="if: activate to sort column ascending">
							<div style="height:0;overflow:hidden;" class="dataTables_sizing">
								&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= p  %>
							</div></th>
							<% end %>
						</tr>
					</thead>

					<tbody>
						<% COLOR.each do |c| %>	
						<tr role="row" class="odd" style="height: 39px;">
							
							<td class="sorting_1"><%= c %></td>
							<% PURITY.each do |p| %>
							<td class="if"><a href="javascript:void(0)" class="addPrice" data-color="<%= c %>" data-purity="<%= p %>" data-price="<%= $price[@shape][@carat][c.downcase][p] rescue '0' %>"   ><%= ($price[@shape][@carat][c.downcase][p] / 100.0).round(1)  rescue '0' %></a></td>
							<% end %>
						
						</tr>
						<% end %>
					</tbody>
				</table>
		</div>
		</div>
		<div style="position: absolute; top: 0px; left: 0px; width: 22px; height: 1px;" class="DTFC_LeftWrapper">
			<div style="position:relative; top:0; left:0; overflow:hidden;" class="DTFC_LeftHeadWrapper">
				<table cellspacing="0" width="100%" class="stripe row-border order-column dataTable no-footer DTFC_Cloned" role="grid" style="margin-left: 0px; width: 100%;">
					<thead>
						<tr role="row" style="height: 19px;">
							<th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 21px;" aria-label=": activate to sort column ascending" aria-sort="ascending"></th>
						</tr>
					</thead>
				</table>
			</div>
			<div style="position: relative; top: 0px; left: 0px; overflow: hidden; height: 312px;" class="DTFC_LeftBodyWrapper">
				<div style="position: relative; top: 0px; left: 0px; overflow-y: scroll; width: 37px; height: 312px;" class="DTFC_LeftBodyLiner">
					<table cellspacing="0" class="stripe row-border order-column dataTable no-footer DTFC_Cloned" role="grid" aria-describedby="example_info" style="width: 100%; padding: 0px; margin: 0px;">
						<thead>
							<tr role="row" style="height: 0px;">
								<th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 21px; padding-top: 0px; padding-bottom: 0px; border-top-width: 0px; border-bottom-width: 0px; height: 0px;" aria-label=": activate to sort column ascending" aria-sort="ascending"></th>
							</tr>
						</thead>

						<tbody>
							<% COLOR.each do |c| %>
							<tr role="row" class="odd" style="height: 39px;">
								<td class="sorting_1"><%= c %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div><div style="position:relative; top:0; left:0; overflow:hidden;" class="DTFC_LeftFootWrapper"></div>
		</div>
	</div> 
</div>

<style>
	.DTFC_ScrollWrapper{height:430px !important;}
	.dataTables_scrollBody,.DTFC_LeftBodyLiner,.DTFC_LeftBodyWrapper{height:435px !important;}
</style>

<script>


		$('.addPrice').click(function() {
			calculate($(this))
			
		});

	var table = $('#example').DataTable({
			scrollY : "auto",
			scrollX : true,
			scrollCollapse : true,
			paging : false

		});
		
		new $.fn.dataTable.FixedColumns(table);

	
	
</script>

