<div class="table">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" id="myTable">
<p id="notice"><%= notice %></p>

<h2>Auctions</h2>
  <thead>
    <tr>
      <th>Time</th>
      <th>Min bid</th>
      <th>Tender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auctions.each do |auction| %>
      <tr>
        <td><%= auction.time %></td>
        <td><%= auction.min_bid %></td>
        <td><%= auction.tender.name %></td>
        <td><%= link_to 'Show', auction %></td>
        <% if current_admin %>
        <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
        <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-row">
  <div class="label">
    &nbsp;
  </div>
  <div class="field">
    <%= link_to 'New Auction', new_auction_path , class: "btn-02 login-btn" %>
  </div>
  <div class="clear"></div>
</div>
