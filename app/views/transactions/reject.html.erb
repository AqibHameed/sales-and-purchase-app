<h3>Reject Transaction </h3>
<div class="clear20"></div>
<div class="form-wrapper">
  <%= form_for @transaction, url: reject_reason_transaction_path(@transaction) do |f| %>
    <div class="form-row">
      <div class="label">Reason for reject: </div>
      <div class="field">
        <%= f.text_area :reject_reason,  class: 'input', required: true %>
      </div>
    </div>
    <div class="clear"></div>
    <div class="form-row">
      <div class="field">
        <%= f.submit "Save", class: 'login-btn btn-01', style:"margin-left: 80.7%" %>
      </div>
    </div>
  <% end %>
</div>