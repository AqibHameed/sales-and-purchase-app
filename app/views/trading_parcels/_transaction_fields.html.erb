<%= f.fields_for :my_transaction do |ff| %>
  <%= ff.hidden_field :seller_id, value: current_company.id %>
  <%= ff.hidden_field :transaction_type, value: 'manual' %>
  <%= ff.hidden_field :buyer_confirmed, value: false %>
  <%= hidden_field_tag "check", true %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Buyer:</label>
    <div class="col-sm-8">
      <%= ff.select :buyer_id, all_companies(current_company), { include_blank: true }, {required: true, class: 'form-control no-border'} %>
    </div>
    <div class="col-sm-2">
      <%= link_to 'Invite', invite_transactions_path, :class => 'invite' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Invoice Date:</label>
    <div class='col-sm-10'>
      <%=ff.text_field :created_at,  class: 'form-control date', required: true %>
    </div>
  </div>
  <div class="clear10"></div>
  <div class="form-group">
  <label class="col-sm-2 control-label">Paid:</label>
    <div class='col-sm-10'>
      <%= ff.select :paid, options_for_select([[true, 1],[false, 0]]), { include_blank: true}, {required: true, class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"></label>
    <div class='col-sm-10'>
      <div class="idt_terms_text"></div>
    </div>
  </div>
<%end%>
<div class="bid_form" style="width:80%!important; margin-left:-10px; display:none; background: #fff;"></div>
<div class="clear"></div>