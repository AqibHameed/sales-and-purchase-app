<table width="100%" border="0" cellspacing="0" cellpadding="0" id="myTable" class="tablesorter">
  <tr>
    <td> Supplier</td>
    <td><%= @parcel.try(:customer).try(:company) %></td>
  </tr>
  <tr>
    <td> Source </td>
    <td><%= @parcel.source.nil? ? 'N/A' : @parcel.source %></td>
  </tr>
  <tr>
    <td> Description</td>
    <td><%= get_description(@parcel) %></td>
  </tr>
  <tr>
    <td> No. of stones</td>
    <td><%= @parcel.no_of_stones.nil? ? 'N/A' : @parcel.no_of_stones %></td>
  </tr>
  <tr>
    <td> Box </td>
    <td><%= @parcel.box.nil? ? 'N/A' : @parcel.box %></td>
  </tr>
  <tr>
    <td> Carats</td>
    <td><%= @parcel.weight %></td>
  </tr>
  <tr>
    <td> Cost</td>
    <td><%= @parcel.cost.nil? ? 'N/A' : @parcel.cost %></td>
  </tr>
  <tr>
    <td> Box Value</td>
    <td><%= @parcel.box_value.nil? ? 'N/A' : @parcel.box_value %></td>
  </tr>
  <tr>
    <td> Sight</td>
    <td><%= @parcel.sight.nil? ? 'N/A' : @parcel.sight.to_date.strftime("%m/%y") %></td>
  </tr>
  <tr class="parcel-details">
    <td> Price</td>
    <td><%= @parcel.price.nil? ? 'N/A' : number_to_percentage(@parcel.price*100, precision: 1) %></td>
  </tr>
  <tr class="parcel-details">
    <td> Credit</td>
    <td><%= @parcel.credit_period %> days </td>
  </tr>
</table>