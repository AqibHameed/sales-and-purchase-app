<div class="form-wrapper">
  <div class="form-row">
    <div class="label">History :</div>
    <div class="field">
      <%= select_tag "history", options_for_select(['Auction History', 'Trading History']), class: 'input', include_blank: true %>
    </div>
  </div>
</div>
<div class="clear"></div>

<div class="dashboard tender_history hide">
  <%= render 'admin_history_search' %>
  <h3>Tender History</h3>
  <div class="clear10"></div>
  <div class='tenders_list'>
    <%= render 'history_list' %>
  </div>
</div>
<div class="clear"></div>

<div class="dashboard trading_history hide mt10">
  <h3>Trading History</h3>
  <div class="clear10"></div>
  <div class='tenders_list'>
    <%= render 'trading_history_list' %>
  </div>
</div>
<script type="text/javascript">
$(document).on('change', '#history', function(){
  val = $('#history').val()
  if(val == "Auction History"){
    $('.tender_history').removeClass('hide')
    $('.trading_history').addClass('hide')
  }else if(val == "Trading History"){
    $('.tender_history').addClass('hide')
    $('.trading_history').removeClass('hide')
  }else{
    $('.tender_history').addClass('hide')
    $('.trading_history').addClass('hide')
  }
})
</script>