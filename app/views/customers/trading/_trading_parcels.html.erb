<table width="100%" border="0" cellspacing="0" cellpadding="0" id="tenderList" class="tablesorter">
  <tr>
    <th></th>
    <th>Description</th>
    <th>No. of Stones</th>
    <th>Carats</th>
    <th>Cost</th>
    <th>Box Value</th>
    <th>Sight</th>
    <th>Price</th>
    <th>Credit</th>
    <th>Supplier</th>
    <th></th>
  </tr>
  <% @parcels.each_with_index do |parcel, i|%>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= parcel.description %></td>
      <td><%= parcel.no_of_stones %></td>
      <td><%= parcel.weight %></td>
      <td><%= 'N/A' %></td>
      <td><%= 'N/A' %></td>
      <td><%= 'N/A' %></td>
      <td><%= parcel.price.nil? ? 'N/A' : parcel.price %></td>
      <td><%= parcel.credit_period %></td>
      <td><%= parcel.try(:customer).try(:company) %></td>
      <% if parcel.customer_id == current_customer.id %>
        <% if params[:controller] == 'customers' %>
          <td><%= link_to 'View', trading_parcel_path(parcel) %></td>
        <% else %>
          <td>
            <%= link_to 'Share', share_trading_parcels_path, 'data-id' => parcel.id, id: 'share', class: 'mr5' %>
            <%= link_to 'View', trading_parcel_path(parcel), class: 'mr5' %>
            <%= link_to 'Edit', edit_trading_parcel_path(parcel), class: 'mr5' %>
            <%= link_to 'Delete', trading_parcel_path(parcel), class: 'mr5', method: :delete, data: { confirm: "Are you sure?"} %>
          </td>
        <% end %>
      <% else %>
        <td><%= link_to 'View', trading_parcel_path(parcel) %></td>
      <% end %>
    </tr>
  <% end %>
</table>
