<table width="100%" border="0" cellspacing="0" cellpadding="0" id="tenderList" class="tablesorter">
  <tr>
    <th></th>
    <th>Description</th>
    <th>No. of Stones</th>
    <th>Weight</th>
    <th>Credit</th>
    <th>Supplier</th>
    <th></th>
  </tr>
  <% @parcels.each_with_index do |parcel, i|%>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= parcel.description %></td>
      <td><%= parcel.no_of_stones %></td>
      <td><%= parcel.weight %></td>
      <td><%= parcel.credit_period %></td>
      <td><%= parcel.try(:company).try(:name) %></td>
      <%- if parcel.customer_id == current_customer.id %>
        <td><%= link_to 'Share', 'javascript:void(0)', 'data-id' => parcel.id, id: 'share' %></td>
      <% else %>
        <td><%= link_to 'View', trading_parcel_path(parcel) %></td>
      <% end %>
    </tr>
  <% end %>
</table>
