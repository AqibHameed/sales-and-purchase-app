<div class="edit-profile-page">
    <div class="edit-profile-page--menu">
      <span style="font-size:14px;" class="fright">
      <%= link_to 'Add More Companies', add_company_customer_path(@customer),:class => 'btn-01',data: {turbolinks: false} %>
      <%#= link_to 'Company list', list_company_companies_path ,:class => 'btn-01' %>
      <%#= link_to 'Customer list', customers_path,:class => 'btn-01' %>
      <%= link_to 'Change Password', change_password_customers_path ,:class => 'btn-01' ,data: {turbolinks: false} %> </span>
    </div>

  <h3>Profile </h3>

  <div class="clear10"></div>
  <%= form_for(@customer, url: update_profile_customers_path) do |f| %>
  <div class="form-wrapper">
    <% if @customer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this auction from being saved:</h2>
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-row">
      <div class="label">
        First Name:
      </div>
      <div class="field">
        <%= f.text_field :first_name, :class => 'input' %>
      </div>
      <div class="clear"></div>
    </div>

    <div class="form-row">
      <div class="label">
        Last Name:
      </div>
      <div class="field">
        <%= f.text_field :last_name, :class => 'input' %>
      </div>
      <div class="clear"></div>
    </div>

    <div class="form-row">
      <div class="label">
        Email:
      </div>
      <div class="field">
        <%= f.text_field :email, :class => 'input', :readonly => true %>
      </div>
      <div class="clear"></div>
    </div>

    <div class="form-row">
      <div class="label">
        Phone:
      </div>
      <div class="field">
        <%= f.text_field :phone, :class => 'input' %>
      </div>
      <div class="clear"></div>
    </div>

    <div class="form-row">
      <div class="label">
        City:
      </div>
      <div class="field">
        <%= f.text_field :city, :class => 'input' %>
      </div>
      <div class="clear"></div>
    </div>

    <div class="form-row">
      <div class="label">
        Address:
      </div>
      <div class="field">
        <%= f.text_field :address, :class => 'input' %>
      </div>
      <div class="clear"></div>
    </div>
      <div class="form-row">
      <div class="label">
        Phone no 2:
      </div>
      <div class="field">
        <%= f.text_field :phone_2, :class => 'input' %>
      </div>
      <div class="clear"></div>
    </div>

    <div class="form-row">
      <div class="label">
        Mobile No:
      </div>
      <div class="field">
        <%= f.text_field :mobile_no, :class => 'input' %>
      </div>
      <div class="clear"></div>
    </div>

    <div class="form-row">
      <div class="label">
        Company:
      </div>
      <div class="field">
        <%= f.text_field :company, :class => 'input' %>
      </div>
      <div class="clear"></div>
    </div>

    <div class="form-row">
      <div class="label">
        Company Address:
      </div>
      <div class="field">
        <%= f.text_area :company_address, :class => 'input', :rows => 4 %>
      </div>
      <div class="clear"></div>
    </div>

    <% if @customer.certificate.present? %>
      <div class="clear"></div>
      <div class="form-row">
        <div class="certificate_div" >
          <%= image_tag @customer.certificate.url, style: "width: 20%", class: 'input' %>
        </div>
      </div>
      <div class="clear"></div>
    <% end %>

    <div class="form-row">
      <div class="label">
        Upload Trade License/Certificate:
      </div>
      <div class="field">
        <%= f.file_field :certificate, :class => 'input' %>
      </div>
      <div class="clear"></div>
    </div>
    <div class="clear20"></div>
    <div class="form-row">
      <div class="label">
        &nbsp;
      </div>
      <div class="field">
        <%= submit_tag 'Update', :class => 'btn-01' %>
        <!-- <a href="#" class="btn-01">Search</a> -->
      </div>
      <div class="clear"></div>
    </div>
  </div>
  <% end %>

</div>
<div class="clear"></div>

