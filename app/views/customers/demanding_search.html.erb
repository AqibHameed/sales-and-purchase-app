    type = $('#demand_diamond_type').val()
    $.ajax({
      url: '/supplier_list',
      method: 'get',
      data: {diamond_type: type}
    })
  })

  $(document).on('change', '#demand_demand_supplier_id', function(){
    id = $('#demand_demand_supplier_id').val()
    $.ajax({
      url: '/supplier_demand_list',
      method: 'get',
      data: {id: id}
  })

})
